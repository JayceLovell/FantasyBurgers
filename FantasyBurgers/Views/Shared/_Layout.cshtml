<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Fantasy Burgers</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
        <div class="navbar navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li role="presentation" class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                Menu <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Appetizers","Index","Appetizers")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Burgers","Index","Burgers")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Combos","Index","Burgers")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Desserts","Index","Desserts")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Drinks","Index","Drinks")</li>
                                <li role="separator" class="divider"></li>
                                <li>@Html.ActionLink("Sides","Index","Sides")</li>
                            </ul>
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">

            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
                <li data-target="#myCarousel" data-slide-to="3"></li>
            </ol>
            <!--Wrapper for slides-->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img style="height:300px; width:100%" src="~/Content/Images/burgers01.JPG" />
                    <div class="carousel-caption">
                        <h1>FANTASY BURGERS</h1>
                    </div>
                </div>

                <div class="item ">
                    <img style="height:300px; width:100%" src="~/Content/Images/burgers02.JPG" />
                    <div class="carousel-caption">
                        <h1>FANTASY BURGERS</h1>
                    </div>
                </div>

                <div class="item ">
                    <img style="height:300px; width:100%" src="~/Content/Images/burgers03.JPG" />
                    <div class="carousel-caption">
                        <h1>FANTASY BURGERS</h1>
                    </div>
                </div>

                <div class="item">
                    <img style="height:300px; width:100%" src="~/Content/Images/burgers04.jpg" />
                    <div class="carousel-caption">
                        <h1>FANTASY BURGERS</h1>
                    </div>
                </div>

            </div>
            <!--Left and right controls-->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>

            </a>

            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    <div class="container body-content" style="margin-top:250px;">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Fantasy Burgers</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
